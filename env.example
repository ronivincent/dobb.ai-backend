# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Google AI Configuration
GOOGLE_API_KEY=your_api_key

# Application Configuration
APP_NAME=Dobb.ai Backend
DEBUG=True

# GitHub MCP Server Configuration (mcp-use)
# Optional: toolsets and read-only mode
GITHUB_MCP_TOOLSETS=repos,issues,pull_requests,actions,code_security
GITHUB_MCP_READ_ONLY=False

# Jira MCP Server Configuration (MCP server launcher)
# The Atlassian MCP server can be launched via Docker image or npx.
# If you have a Docker image reference for the server, set JIRA_MCP_SERVER_URL accordingly.
# Otherwise, leave it blank to use the npx server launcher.
JIRA_URL=https://your-company.atlassian.net
# Preferred: JIRA_USERNAME; also supports legacy JIRA_USER_NAME
JIRA_USERNAME=your.email@company.com
# JIRA_USER_NAME=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_VERIFY_SSL=True
JIRA_MCP_SERVER_URL=

# OpenAi Credentials
OPENAI_API_KEY=your_openai_api_key_here

# Chroma DB
CHROMA_DB_DIRECTORY_PATH=chroma_db_stroage_path
